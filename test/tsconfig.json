{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "noEmit": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "ES2022",
    "paths": {
      "$lib": ["../src/lib"],
      "$lib/*": ["../src/lib/*"]
    }
  },
  "include": ["./**/*"]
}
