{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "es2022",
    "target": "ES2022",
    "lib": ["es2022"],
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "$cli/*": ["src/lib/cli/*"],
      "$config/*": ["./src/lib/config/*"],
      "$export/*": ["src/lib/plugins/*"],
      "$notion/*": ["./src/lib/notion/*"],
      "$objects/*": ["./src/lib/objects/*"],
      "$renderers/*": ["./src/lib/renderers/*"],
      "$util/*": ["./src/lib/util/*"],
      "$plugins/*": ["./src/plugins/*"]
    }
  },
  "include": ["./src/**/*"]
}
