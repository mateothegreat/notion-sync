{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": false,
    "strict": true,
    "strictNullChecks": false,
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"]
    }
  },
  "exclude": ["**/*.test.ts"],
  "include": [
    "./src/**/*",
    "dump/bad/exporter.test.ts",
    "src/lib/export/exporter.ts",
    "src/lib/index.ts",
    "src/lib/export/config.ts"
  ]
}
